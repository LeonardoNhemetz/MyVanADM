<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"



    tools:context="myvan.myvanadm.Principal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <Button
                android:id="@+id/btn_ListarPass"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/enter_button"
                android:textStyle="normal"
                android:textColor="#fff"
                android:onClick="ListarPass"
                android:text="Cadastrar Passageiros" />

            <Button
                android:id="@+id/btn_exlude"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnMapsVoltar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/enter_button"
                android:textStyle="normal"
                android:textColor="#fff"
                android:onClick="btnExcluir"
                android:text="Excluir Passageiros"

                />
            <Button
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/btn_exlude"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="Politica de privacidade"
                android:onClick="Politics"/>


            <Button
                android:id="@+id/btnSelect"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btn_ListarPass"
                android:layout_alignStart="@+id/btn_ListarPass"
                android:layout_below="@+id/btn_ListarPass"
                android:layout_marginTop="25dp"
                android:background="@drawable/enter_button"
                android:textStyle="normal"
                android:textColor="#fff"
                android:onClick="SelectPass"
                android:text="Selecionar Passageiros" />

            <Button
                android:id="@+id/BtnInfoDet"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btnSelect"
                android:layout_alignStart="@+id/btnSelect"
                android:layout_below="@+id/btnSelect"
                android:layout_marginTop="25dp"
                android:background="@drawable/enter_button"
                android:textStyle="normal"
                android:textColor="#fff"
                android:onClick="InfoDet"
                android:text="Informação Detalhada" />

            <Button
                android:id="@+id/btnMap"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/BtnInfoDet"
                android:layout_alignStart="@+id/BtnInfoDet"
                android:layout_below="@+id/BtnInfoDet"
                android:layout_marginTop="25dp"
                android:background="@drawable/enter_button"
                android:textStyle="normal"
                android:textColor="#fff"
                android:onClick="maps"
                android:text="Iniciar Mapa" />


            <Button
                android:id="@+id/btnMapsVoltar"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btnMap"
                android:layout_alignStart="@+id/btnMap"
                android:layout_below="@+id/btnMap"
                android:layout_marginTop="25dp"
                android:background="@drawable/enter_button"
                android:textStyle="normal"
                android:textColor="#fff"
                android:onClick="MapsVoltar"
                android:text="Iniciar Mapa Volta" />


        </RelativeLayout>

    </ScrollView>


    <com.google.android.gms.ads.AdView
        android:id="@+id/adBannerPrincipal"
        android:layout_height="70dp"
        android:layout_width="match_parent"
        ads:adSize="BANNER"

        ads:adUnitId="ca-app-pub-7204661155560964/2812385894"
        android:layout_alignParentBottom="true"
        />








</RelativeLayout>
