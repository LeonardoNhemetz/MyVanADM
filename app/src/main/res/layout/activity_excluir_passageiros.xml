<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="myvan.myvanadm.ExcluirPassageiros">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/txtExcluir"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="35dp"
            android:hint="Nome do passageiro a ser excluido" />

        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnExcluir"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtExcluir"
            android:layout_marginTop="30dp"
            android:text="Excluir"
            android:onClick="ExcluirPassageiro"
            android:background="#ff951b"
            />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
