<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="myvan.myvanadm.CadastrarPassageiros">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Nome completo"

        android:layout_alignRight="@+id/txtEnd1"
        android:layout_alignEnd="@+id/txtEnd1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtEmail"
        android:hint="E-mail"
        android:layout_alignTop="@+id/txtName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/txtEnd3"
        android:layout_alignStart="@+id/txtEnd3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPassword"

        android:inputType="textPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Senha"
        android:layout_below="@+id/txtEmail"
        android:layout_marginTop="7dp"/>

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtEnd1"
        android:inputType="textPersonName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="End de ida 1*"
        android:layout_below="@+id/txtPassword"
        android:layout_marginTop="7dp"
         />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtNum1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Numero de ida 1*"
        android:inputType="textPersonName"
        android:layout_below="@+id/txtEnd1"
        android:layout_marginTop="7dp"
        android:layout_alignRight="@+id/txtEnd1"
        android:layout_alignEnd="@+id/txtEnd1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTel"
        android:hint="Celular do Passageiro (sem ddd)"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/txtCid2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/txtCid4"
        android:layout_alignEnd="@+id/txtCid4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:id="@+id/btnCadastrar"
        android:onClick="UserReg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/txtPassUser"
        android:layout_toEndOf="@+id/txtPassUser"
        android:layout_alignTop="@+id/txtLoginUser" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLoginUser"
        android:hint="Login do Motorista"
        android:layout_above="@+id/txtPassUser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPassUser"

        android:hint="Senha do Motorista"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtEnd3"
        android:inputType="textPersonName"
        android:hint="End de volta 1"
        android:layout_below="@+id/txtPassword"


        android:layout_alignTop="@+id/txtEnd1"
        android:layout_alignRight="@+id/txtPassword"
        android:layout_alignEnd="@+id/txtPassword"
        android:layout_toEndOf="@+id/txtEnd1"
        android:layout_toRightOf="@+id/txtEnd1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNum3"
        android:inputType="textPersonName"
        android:hint="Numero de volta 1"
        android:layout_alignTop="@+id/txtNum1"
        android:layout_alignRight="@+id/txtEnd3"
        android:layout_alignEnd="@+id/txtEnd3"
         android:layout_alignLeft="@+id/txtEnd3"
        android:layout_alignStart="@+id/txtEnd3" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtEnd2"
        android:inputType="textPersonName"
        android:hint="End de ida 2*"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/txtCid1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtNum2"
        android:hint="Numero de ida 2*"
        android:inputType="textPersonName"
        android:layout_below="@+id/txtEnd2"
        android:layout_marginTop="7dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtEnd4"
        android:inputType="textPersonName"
        android:hint="End de volta 2"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/txtCid1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/txtNum3"
        android:layout_alignStart="@+id/txtNum3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNum4"
        android:inputType="textPersonName"
        android:hint="Numero de volta 2"
        android:layout_alignTop="@+id/txtNum2"

        android:layout_alignRight="@+id/txtEnd4"
        android:layout_alignEnd="@+id/txtEnd4"
        android:layout_alignLeft="@+id/txtEnd4"
        android:layout_alignStart="@+id/txtEnd4" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtCid1"
        android:inputType="textPersonName"
        android:hint="Cidade 1*"
        android:layout_below="@+id/txtNum1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp"
        android:layout_alignRight="@+id/txtEnd2"
        android:layout_alignEnd="@+id/txtEnd2" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtCid2"
        android:inputType="textPersonName"
        android:hint="Cidade 2*"
        android:layout_below="@+id/txtNum2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp"
        android:layout_alignRight="@+id/txtNum2"
        android:layout_alignEnd="@+id/txtNum2" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtCid3"
        android:inputType="textPersonName"
        android:hint="Cidade 1"
        android:layout_below="@+id/txtNum3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:layout_alignLeft="@+id/txtEnd4"
        android:layout_alignStart="@+id/txtEnd4" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtCid4"
        android:inputType="textPersonName"
        android:hint="Cidade 2"
        android:layout_marginTop="7dp"

        android:layout_below="@+id/txtNum4"
        android:layout_alignRight="@+id/txtNum4"
        android:layout_alignEnd="@+id/txtNum4"
        android:layout_alignLeft="@+id/txtNum4"
        android:layout_alignStart="@+id/txtNum4" />


</RelativeLayout>
